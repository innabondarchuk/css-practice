<html>

  <head>
    <title>
      Dashboard page
    </title>
    <meta charset='utf-8' />

    <link
      rel='apple-touch-icon'
      sizes='180x180'
      href='/fav/apple-touch-icon.png'
    />
    <link
      rel='icon'
      type='image/png'
      sizes='32x32'
      href='/fav/favicon-32x32.png'
    />
    <link
      rel='icon'
      type='image/png'
      sizes='16x16'
      href='/fav/favicon-16x16.png'
    />
    <link rel='manifest' href='/fav/site.webmanifest' />
    <link
      rel='mask-icon'
      href='/fav/safari-pinned-tab.svg'
      color='#5bbad5'
    />
    <meta
      name='msapplication-TileColor'
      content='#da532c'
    />
    <meta name='theme-color' content='#ffffff' />

    <link href='css/normalize.css' rel='stylesheet' />

    <link href='css/dashboard.css' rel='stylesheet' />

    <meta
      name=' viewport '
      content=' viewport-fit=cover, width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no '
    />

  </head>

  <body>

    <div class='page page--dashboard'>
      <aside class='page__aside aside vertical'>
        <div class='text aside__logo'>
          Sidebar
        </div>
        <nav class='vertical vertical--small'>
          <a
            href='#'
            class='nav-button nav-button--active click'
          >
            <span
              class='icon nav-button__icon'
              style="background-image: url('/svg/nav/home.svg')"
            ></span>
            <span class='text text--light'>Home</span>
          </a>

          <a href='#' class='nav-button click'>
            <span
              class='icon nav-button__icon'
              style="background-image: url('/svg/nav/orders.svg')"
            ></span>
            <span class='text text--light'>Orders</span>
          </a>

          <a href='#' class='nav-button click'>
            <span
              class='icon nav-button__icon'
              style="background-image: url('/svg/nav/products.svg')"
            ></span>
            <span class='text text--light'>Products</span>
          </a>
        </nav>
      </aside>
      <header class='header'>
        <div class='layout header__content text--small'>
          <div class='header__search relative'>
            <input
              type='text'
              placeholder='Search'
              class='text field field--header'
            />
            <span
              class='icon header__icon-search'
              style="background-image: url('/svg/header/search.svg')"
            ></span>
            <span
              class='icon icon--header-settings icon--button icon--color-blue-dark click'
              style="background-image: url('/svg/header/settings.svg')"
            ></span>
          </div>

          <div class='header__icon-list'>
            <span
              class='icon icon--button icon--header-signal icon--color-yellow click'
              style="background-image: url('/svg/header/signal.svg')"
            ></span>
            <span
              class='icon icon--button icon--header-translate icon--color-blue click'
              style="background-image: url('/svg/header/translate.svg')"
            ></span>
            <span
              class='icon icon--button icon--header-bell icon--color-yellow click'
              style="background-image: url('/svg/header/bell.svg')"
            ></span>
          </div>
        </div>
      </header>

      <main class='main'>

        <div class='layout'>
          <section class='box analytic__block'>

            <div
              class='analytic analytic--double analytic--purple'
            >
              <span
                class='icon analytic__button icon--button icon--color-purple-dark click'
                style="background-image: url('/svg/analytic/money.svg')"
              ></span>
              <div
                class='relative vertical vertical--small'
              >
                <div
                  class='analytic__title text text--light'
                >
                  $500.00
                </div>
                <div
                  class='analytic__info text text--small text--lighter'
                >Total earning</div>

                <span
                  class='icon analytic__arrow'
                  style="background-image: url('/svg/analytic/blue-arrow.svg')"
                ></span>
              </div>
            </div>

            <div
              class='analytic analytic--double analytic--blue'
            >
              <span
                class='icon analytic__button icon--button icon--color-blue-dark click'
                style="background-image: url('/svg/analytic/order.svg')"
              ></span>
              <div
                class='relative vertical vertical--small'
              >
                <div
                  class='analytic__title text text--light'
                >$961</div>
                <div
                  class='analytic__info text text--small text--lighter'
                >Total Order</div>
              </div>
            </div>

            <div
              class='analytic analytic--blue analytic__content'
            >
              <span
                class='icon analytic__button icon--button icon--color-blue-dark click'
                style="background-image: url('/svg/analytic/money.svg')"
              ></span>

              <div class='vertical vertical--small'>

                <div
                  class='analytic__title--small text text--light'
                >
                  $203k
                </div>

                <div
                  class='analytic__info text text--small text--lighter'
                >
                  Total Income
                </div>
              </div>

            </div>

            <div
              class='analytic analytic--border analytic__content'
            >
              <span
                class='icon analytic__button icon--button icon--color-yellow click'
                style="background-image: url('/svg/analytic/shop.svg')"
              ></span>

              <div class='vertical vertical--small'>
                <div class='analytic__title--small text'>
                  $203k
                </div>

                <div
                  class='analytic__info text text--small text--gray'
                >
                  Total Income
                </div>
              </div>
            </div>
          </section>
        </div>

        <div class='layout cart__content'>

          <section class='box'>
            <div class='text cart__title'>Purchase list</div>
            <hr class='divider' />
            <div class='purchase__block'>
              <div class='text text--small'>ID437661</div>
              <div class='text text--small'>AirOn ProCam</div>
              <div class='text text--small'>132.32 EUR</div>
              <div class='text text--small'>Customer</div>
              <div class='text text--small'>May 11, 2023,
                14:21</div>
              <div class='text text--small'>7/8 USB Type-C</div>
              <div
                class='text text--small text--warning'
              >Not paid</div>
              <div
                class='text text--small'
              >robin@com.de</div>
            </div>
            <hr class='divider' />
            <div class='purchase__block'>
              <div class='text text--small'>ID437661</div>
              <div class='text text--small'>PHILIPS
                Essential</div>
              <div class='text text--small'>543 USD</div>
              <div class='text text--small'>Customer</div>
              <div class='text text--small'>May 11, 2023,
                14:21</div>
              <div class='text text--small'>HD9200/90</div>
              <div
                class='text text--small text--success'
              >Pay by Stripe</div>
              <div
                class='text text--small'
              >dima@com.ua</div>
            </div>
          </section>

          <section class='box payment__block'>
            <div class='text cart__title'>Payment</div>
            <hr class='divider' />
            <div
              class='radio__block vertical vertical--small'
            >
              <div>
                <input type='radio' checked />
                <span class='text'>Credit card</span>
              </div>
              <div>
                <input type='radio' />
                <span class='text'>Debit card</span>
              </div>
              <div>
                <input type='radio' />
                <span class='text'>PayPal</span>
              </div>
            </div>
            <div class='credit-card__block'>
              <div class='vertical vertical--small'>
                <label class='text'>Name on card</label>
                <input type='text' class='text field' />
              </div>
              <div class='vertical vertical--small'>
                <label class='text'>Credit card number</label>
                <input type='text' class='text field' />
              </div>
              <div class='vertical vertical--small'>
                <label class='text'>Expiration</label>
                <input type='text' class='text field' />
              </div>
              <div class='vertical vertical--small'>
                <label class='text'>CVV</label>
                <input type='text' class='text field' />
              </div>
            </div>
            <hr class='divider' />
            <div class='state__block'>
              <div class='vertical vertical--small'>
                <div class='text'>Country</div>
                <div class='relative click'>
                  <div class='field field--select relative'>
                    <span class='text'>Choose...</span>
                    <span
                      class='icon select__icon'
                      style="background-image: url('/svg/select.svg')"
                    ></span>
                  </div>
                  <select class='field__select'>
                    <option value='dog'>Dog</option>
                    <option value='cat'>Cat</option>
                    <option value='hamster'>Hamster</option>
                    <option value='parrot'>Parrot</option>
                    <option value='spider'>Spider</option>
                  </select>
                </div>
              </div>

              <div class='vertical vertical--small'>
                <div class='text'>State</div>
                <div class='relative click'>
                  <div class='field field--select relative'>
                    <span class='text'>Choose...</span>
                    <span
                      class='icon select__icon'
                      style="background-image: url('/svg/select.svg')"
                    ></span>
                  </div>
                  <select class='field__select'>
                    <option value='dog'>Dog</option>
                    <option value='cat'>Cat</option>
                    <option value='hamster'>Hamster</option>
                    <option value='parrot'>Parrot</option>
                    <option value='spider'>Spider</option>
                  </select>
                </div>
              </div>
            </div>
            <hr class='divider' />
            <div class='button__block'>
              <a
                href='#'
                class='nav-button nav-button--active button click'
              >
                <span class='text text--light'>Continue to
                  checkout</span>
              </a>
            </div>
          </section>
        </div>

      </main>
    </div>

  </body>

</html>