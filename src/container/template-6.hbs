<header class='header'>
  <a href="#test">
    {{> logo}}
  </a>
  
  <nav class='header_nav'>
    <div class="header_nav_right">
      {{> nav list=header}}
    </div>
  </nav>
</header>

<main class="main">
  {{#with info}}
    <div class="info">
      <h1 class="info_title">{{title}}</h1>
      <p class="info_text">{{description}}</p>
    </div>
  {{/with}}

  {{#with form}}
    <form class="form">
    
      <div class="form_input_list">
        {{#each inputs}}
          <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form-input-{{id}}">
        {{/each}}
      </div>

      <div class="form_checkbox">
        <input type="checkbox"  id="{{checkbox.name}}">
        <div></div>
        <label for="{{checkbox.name}}">{{checkbox.label}}</label>
      </div>

      <button type="submit" class="form_button">{{button}}</button>
      <p class="form_info">{{info}}</p>
    </form>
  {{/with}}
</main>

{{#with updates}}
    <div class="updates">
      <h2 class="updates_title">{{title}}</h2>

      {{#each list}}
        <div class="upd">
          <div class="upd_image">32x32</div>
          <strong class="upd_name">{{nickname}}</strong>
          <p class="upd_text">{{description}}</p>
        </div>
      {{/each}}

      {{#with show_all}}
        <a href="url" class="upd_link">{{text}}</a>
      {{/with}}
    </div>
  {{/with}}

{{#with expirience}}
  
  <div class='expirience'>
    
    <h2 class="expirience_title">{{title}}</h2>
    <span class="expirience_badge">{{badge}}</span>
    
    <div class="list">
      {{#each list}}
        <div class="exp">
          <strong class="exp_title">{{name}}</strong>
          <p class="exp_text">{{details}}</p>
        </div>
      {{/each}}
    </div>
  </div>
{{/with}}

<footer class="footer" id="test">
  <div>
    {{> logo}}
    <span class="footer_copyright">Copyright 2023-2024</span>
  </div>

  {{#each footer}}
  <div>
    <span class="footer_title">{{title}}</span>
    {{> nav list=links isVertical=true}}
  </div>
  {{/each}}
</footer>

